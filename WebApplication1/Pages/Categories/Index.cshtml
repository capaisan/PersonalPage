@page
@model TylersWebPage.Pages.Categories.IndexModel
@{
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    <div>
        <table cellspacing="50">
            <form method="post">
            <tr colspan="20" rowspan="20">
            <tr>
                <div>
                    <label for="Name">Name:</label>
                    <input type="text" name="Name" value="" />
            
                    <label for="DisplayOrder">Display Order:</label>
                    <input type="text" name="DisplayOrder" value="" />
                </div>
                <div>
                    <label>&nbsp</label>
                    <input type="submit" class="submit" value="Submit" />
                    <a asp-page="/Categories/Delete" class="btn btn-success">Edit</a>
                </div>
            </tr>
            
            </form>
        </table>
    </div>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-md-12">
                <h1>Categories</h1>
            </div>
        </div>

        <br /> <br />
        <div class="align-self-lg-center">
            <table border="1" cellpadding="25">
                <thread>
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th>
                            Display Order
                        </th>
                    </tr>
                </thread>
                <tbody>
                    @foreach (var obj in Model.Categories)
                    {
                        <tr>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.DisplayOrder
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
</body>
