@page
@model TylersWebPage.Pages.Categories.DeleteModel
@{
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RuneScape</title>
</head>

<div class="container ">
    <div class="row pt-4">
        <div class="col-md-12">
            <h1>Categories</h1>
        </div>
    </div>

    <br />

    <table border="1" cellpadding="25">
        <thread>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thread>
        <tbody>
            <form method="post">

                <input type="hidden" asp-for="Categories" />
                <label for="Id">
                    <select id="Id", name="Id">
                        @foreach (var obj in Model.Categories)
                        {
                            <option value="@obj.Id" name="@obj.Id">
                                @obj.Name
                            </option>
                        }
                    </select>
                </label>
                @foreach (var obj in Model.Categories)
                {
                <tr>
                    <td>
                            @obj.Name
                    </td>
                    <td>
                            @obj.DisplayOrder
                    </td>
                </tr>
                }


            <div class="p-1 p">
                <input type="submit" value="Delete" class="btn btn-danger" p />
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
            <br />
            </form>
        </tbody>
    </table>
</div>
